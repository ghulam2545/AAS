<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../metadata.ejs') %>
    <title>Login</title>
    <link rel="stylesheet" href="root.css">
    <link rel="stylesheet" href="login.css">
</head>

<body>
    <nav>
        <div class="landing-brand">
            <a href="/">
                <i class='bx bx-grid-alt'></i>
                <span>AAS</span>
            </a>
        </div>
        <div class="landing-date">
            <p class="todays-date">dd-mm-yyyy</p>
        </div>
    </nav>

    <div class="signup-container">
        <div class="signup-sections">
            <div class="left-section">
                <img src="login_image.svg" alt="signup image">
            </div>
            <div class="right-section">
                <h2>Welcome to AAS</h2>
                <i class='bx bxs-user'></i>
                <div class="signup-form">
                    <form action="/login" method="post">
                        <div class="form-entry">
                            <label class="red-asterisk">Username : </label>
                            <input type="text" name="username" placeholder="Ex. Johd Doe" required>
                        </div>
                        <div class="form-entry">
                            <label class="red-asterisk">Password :</label>
                            <input type="password" name="password" placeholder="Enter password" required>
                        </div>
                        <button class="submit-btn">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="todays_date.js"></script>
    <script>
        document.querySelector(".todays-date").innerHTML = todays_date();
    </script>
</body>

</html>